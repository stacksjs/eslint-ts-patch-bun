{
  "name": "eslint-ts-patch-bun",
  "type": "commonjs",
  "version": "8.57.0-0",
  "description": "Support eslint.config.mjs and eslint.config.ts for ESLint using Bun",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/antfu",
  "homepage": "https://github.com/antfu/eslint-ts-patch-bun#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/eslint-ts-patch-bun.git"
  },
  "bugs": "https://github.com/antfu/eslint-ts-patch-bun/issues",
  "keywords": [
    "eslint",
    "bun"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": "./lib/api.js",
    "./register": "./lib/register.js",
    "./use-at-your-own-risk": "./lib/unsupported-api.js"
  },
  "main": "./lib/api.js",
  "bin": {
    "eslint": "./bin/eslint.js",
    "eslint-ts": "./bin/eslint.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "lint": "bun ./eslint.js .",
    "release": "bumpp && npm publish",
    "test": "bunx vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "eslint": "^8.57.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.7.0",
    "@antfu/ni": "^0.21.12",
    "@types/bun": "^1.0.8",
    "@types/eslint": "^8.56.5",
    "@types/fs-extra": "^11.0.4",
    "bumpp": "^9.3.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "lint-staged": "^15.2.2",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.4",
    "vitest": "^1.3.1"
  }
}
